<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="apps.tridentfitness.activities.ProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/btn_withborder">

            <TextView
                android:id="@+id/txt_calender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CALENDER"
                android:fontFamily="@font/ptsansregular01"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_calender1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/ptsansregular01"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="CALENDER"
                android:visibility="visible"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:text="WEIGHT"
                android:fontFamily="@font/ptsansregular01"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_weight1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                android:text="WEIGHT"
                android:textColor="@color/green" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>