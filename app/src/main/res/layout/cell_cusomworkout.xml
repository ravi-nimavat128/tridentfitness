<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/layout1">


            <ImageView
                android:id="@+id/img_text"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_65sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/rectangle_image" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/txt_text"
                android:textSize="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:textStyle="normal"
                android:textAllCaps="true" />


        </RelativeLayout>









        <!--android:textColor="#000"-->
        <!--android:textColor="#4E4B4B"-->





        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/img_detailarrow"
            android:layout_toEndOf="@id/layout1"
           android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="5dp">

            #5A5959
            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUMPING JACKS"
                android:textColor="#333333"
                android:fontFamily="@font/ptsanc_web_regular"
                android:textSize="15dp"
                android:textAlignment="textStart" />

        </RelativeLayout>





        <!--android:textColor="#000"-->

       <!-- <TextView
            android:id="@+id/txt_detail"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/img_jumping"
            android:layout_toStartOf="@+id/img_arrow"
            android:text="JUMPING JACKS"
            android:textColor="#5A5959"
            android:fontFamily="@font/ptsansregular01"
            android:textSize="15sp"
            android:textAlignment="textStart" />-->



        <RelativeLayout
            android:id="@+id/liner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout3"
            android:layout_toStartOf="@+id/img_detailarrow"
            android:layout_toEndOf="@id/layout1"

            android:layout_marginEnd="5dp"
            android:layout_marginStart="@dimen/_8sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <TextView
                    android:id="@+id/num_excecise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ptsanscaption06"
                    android:text="12"
                        android:layout_gravity="center"
                        android:textColor="#333333"
                    android:textSize="11sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="@string/filled_bullet"
                    android:layout_gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/num_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="7"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ptsanscaption06"
                    android:textColor="#333333"
                    android:textSize="11sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="@string/filled_bullet"
                    android:layout_gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/num_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="43"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ptsanscaption06"
                    android:textColor="#333333"
                    android:textSize="11sp" />

            </LinearLayout>


        </RelativeLayout>


        <ImageView
            android:id="@+id/img_detailarrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            android:src="@drawable/img_detailarrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/details"
        android:layout_marginTop="10dp"
        android:background="#ADADAD" />

</RelativeLayout>










