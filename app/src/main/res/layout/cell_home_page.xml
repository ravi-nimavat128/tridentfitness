<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <ImageView
            android:id="@+id/img_excercise"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:scaleType="centerCrop"
            android:background="@drawable/rectangle_image" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toStartOf="@+id/img_arrow"
            android:layout_toEndOf="@id/img_excercise"

            android:textColor="#333333"
            android:maxLines="2"
            android:fontFamily="@font/ptsansregular01"
            android:text="JUMPING JACKS" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/_25sdp"
            android:visibility="gone"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_detailarrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/details"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#ADADAD" />

</RelativeLayout>