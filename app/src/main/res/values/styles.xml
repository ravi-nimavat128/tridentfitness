<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="DayOfWeekStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="DayOfCurrentMonthStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/calendar_month_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#A9A9A9</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">#A9A9A9</item>
        <item name="colorControlNormal">#A9A9A9</item>
        <item name="colorControlActivated">#A9A9A9</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

</resources>
